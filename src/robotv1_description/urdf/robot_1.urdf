<?xml version="1.0"?>
<robot name="my_robot">

  <link name="base">
    <visual>
        <origin xyz="0 0 0" rpy = "0 0 0"/>
        <geometry>
            <mesh filename="package://robotv1_description/meshes/base.stl"/>
        </geometry>
        <material name="blue">
            <color rgba="0.0 0.0 1.0 1.0"/>
        </material>
    
    </visual>

    <collision>
    
        <origin xyz="0 0 0" rpy = "0 0 0"/>
        <geometry>
            <mesh filename="package://robotv1_description/meshes/base.stl"/>
        </geometry>

    </collision>

    <inertial>
        <origin xyz="0 0 0"/>
        <mass value="2"/>
        <inertia ixx="0.00282" ixy="0.0" ixz="0.0"
           iyy="0.00282" iyz="0.0" izz="0.00480"/>
    </inertial>
  </link>

  <link name="base_link">
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://robotv1_description/meshes/base_link.stl"/>
        </geometry>
        <material name="green">
            <color rgba="0.047 0.949 0.302 1.0"/>
        </material>
    </visual>

    <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://robotv1_description/meshes/base_link.stl"/> 
        </geometry>
    </collision>

  </link>

    <joint name="base_to_base_link" type="revolute">
        <parent link="base"/>
        <child link="base_link"/>

        <origin xyz="0 0 0" rpy="0 0 0"/>

        <axis xyz="0 0 1"/>

        <limit lower="-1.57" upper="1.57" effort="5" velocity="1"/>
    </joint>



</robot>
